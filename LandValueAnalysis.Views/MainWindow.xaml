<Window x:Class="LandValueAnalysis.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:local="clr-namespace:LandValueAnalysis.Views"
        xmlns:templates="clr-namespace:LandValueAnalysis.Views.Templates"
        xmlns:viewModels="clr-namespace:LandValueAnalysis.ViewModels;assembly=LandValueAnalysis.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type viewModels:MapViewModel}">
                <templates:MapView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:StatsViewModel}">
                <templates:StatsView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
